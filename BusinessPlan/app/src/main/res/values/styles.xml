<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="background">
        <item name="android:background">#ffffff</item>
	</style>

    <style name="instructions">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="question">
        <item name="android:textColor">#353535</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="response">
        <item name="android:textColor">#353535</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">#eeeeee</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="imagebutton">
        <item name="android:background">#2DC489</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="navbutton">
        <item name="android:background">#363839</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="pagination">
        <item name="android:textColor">#353535</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">24dp</item>

    </style>
</resources>
